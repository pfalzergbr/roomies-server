{
  "name": "roomies-api",
  "version": "1.0.0",
  "description": "Backend service for the household management mobile application in the works.",
  "main": "app.ts",
  "scripts": {
    "test": "jest",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "tsc && node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix & prettier",
    "prettier": "prettier --ignore-path .prettierignore --check .",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(ts|tsx|js|jsx|json)\""
  },
  "keywords": [],
  "author": "Gabor Pfalzer, Reka Kertesz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "pino": "^7.6.4",
    "pino-http": "^6.6.0",
    "pino-pretty": "^7.5.1",
    "prettier": "^2.5.1",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.13",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm lint"
    }
  }
}
